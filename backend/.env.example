# Supabase Configuration
# Get these from your Supabase project dashboard: Settings > API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI Configuration
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# Vapi Configuration
# Get these from https://dashboard.vapi.ai
VAPI_API_KEY=your_vapi_api_key
VAPI_SECRET_KEY=your_vapi_webhook_secret

# Public Backend URL
# The public URL where your backend API is accessible
# For local development, use Cloudflare Tunnel or ngrok
# For production, use your Render/deployment URL
PUBLIC_BACKEND_URL=https://your-backend-url.com

# Twilio Configuration (Optional - for automatic phone provisioning)
# Get these from https://console.twilio.com
# Required only if you want automatic Twilio phone number creation
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Environment
# Set to 'development' for local development, 'production' for deployed environments
ENVIRONMENT=development
